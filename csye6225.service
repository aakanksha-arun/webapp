[Unit]
Description=CSYE 6225 App
After=network.target

[Service]
Type=simple
User=csye6225
Group=csye6225
WorkingDirectory=/opt/webapp/
Environment=PSQL_DB_USER=a
Environment=PSQL_DB_PASS=abc
Environment=PSQL_DB=mydb
